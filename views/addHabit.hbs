<div class="container">
    <h2 class="mb-4">Add a New Habit</h2>
    <form action="/habits/add" method="post">
        <div class="mb-3">
            <label for="habitName" class="form-label">Habit Name:</label>
            <input type="text" id="habitName" name="habitName" required class="form-control">
        </div>
        <div class="mb-3">
            <label for="habitDescription" class="form-label">Habit Description:</label>
            <textarea id="habitDescription" name="habitDescription" required class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label for="habitDate" class="form-label">Date:</label>
            <input type="date" id="habitDate" name="habitDate" required class="form-control">
        </div>
        <div class="mb-3">
            <label for="timeSpent" class="form-label">Time Spent (minutes):</label>
            <input type="number" id="timeSpent" name="timeSpent" required class="form-control">
        </div>
        <div class="mb-3">
            <label for="categoryId" class="form-label">Category:</label>
            <select id="categoryId" name="categoryId" required class="form-select">
                {{#each categories}}
                <option value="{{this.id}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Add Habit</button>
    </form>
    <a href="/habits" class="btn btn-secondary mt-3">Back to Habit Tracker</a>
</div>
