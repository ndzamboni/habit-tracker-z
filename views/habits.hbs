<div class="container">
    <h1>Your Habits</h1>
    <a href="/habits/add" class="btn btn-primary mb-3">Add a New Habit</a>

    <!-- Category Selection -->
    <div class="mb-4">
        <label for="categorySelector" class="form-label">Select Category:</label>
        <select id="categorySelector" class="form-select">
            <option value="all">All Categories</option>
            {{#each categories}}
            <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}
        </select>
    </div>

    <!-- Habits List -->
    <div id="habitsList" class="accordion" id="habitsAccordion">
        <!-- The habits will be dynamically loaded here -->
    </div>

    <!-- Calendar Heatmap Container -->
    <div id="habitHeatmap" class="mt-4"></div>

    <!-- Hexbin Chart Container -->
    <div id="hexbinChart" class="mt-4"></div>

    <!-- Treemap Chart Container -->
    <div id="treemapChart" class="mt-4"></div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
<!-- D3.js Library -->
<script src="https://d3js.org/d3.v7.min.js"></script>
<!-- Custom Scripts -->
<script src="/js/scripts.js" defer></script>
<script src="/js/calendarHeatmap.js" defer></script>
<script src="/js/hexbinChart.js" defer></script>
<script src="/js/treemapChart.js" defer></script>
