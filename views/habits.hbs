<div class="container">
    <h2>Your Habits</h2>
    <a href="/habits/add">Add a New Habit</a>
    <div id="habitsList">
        {{#each habits}}
        <div class="habit">
            <p>{{name}} - {{description}} ({{formatDate created_at "MMM Do YYYY"}})</p>
        </div>
        {{/each}}
    </div>
    <canvas id="heatmapCanvas" width="400" height="200"></canvas>
    <div id="habitHeatmap"></div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        fetch('/habits/data')
            .then(response => response.json())
            .then(data => {
                const dates = Object.keys(data);
                const counts = Object.values(data);

                const ctx = document.getElementById('heatmapCanvas').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: dates,
                        datasets: [{
                            label: 'Habits per Day',
                            data: counts,
                            backgroundColor: 'rgba(75, 192, 192, 0.2)',
                            borderColor: 'rgba(75, 192, 192, 1)',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
            });
    });
</script>
