<div class="container mx-auto p-6 bg-white shadow-md rounded">
    <h2 class="text-2xl font-bold mb-4">Your Habits</h2>
    <a href="/habits/add" class="text-blue-500">Add a New Habit</a>
    <div id="habitsList" class="mt-4">
        {{#each habits}}
        <div class="habit mb-2 p-2 border-b">
            <p>{{name}} - {{description}} ({{formatDate created_at "MMM Do YYYY"}})</p>
        </div>
        {{/each}}
    </div>
    <div id="habitHeatmap" class="mt-4"></div>
</div>
